# Render Deployment Environment Variables
# Copy this file and configure the values in Render dashboard

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# Django environment (development, production)
DJANGO_ENV=production
DJANGO_SETTINGS_MODULE=config.settings.production

# Secret key for Django (generate a secure random string)
# Render can auto-generate this with generateValue: true
DJANGO_SECRET_KEY=your-secret-key-here-change-this

# Debug mode (NEVER set to True in production)
DEBUG=False

# Allowed hosts (comma-separated list of domains)
ALLOWED_HOSTS=rotc-django-web.onrender.com,msu-snd-rgms-1.onrender.com,localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL database URL (auto-configured by Render from database service)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@host:5432/rotc_db

# Alternative: Individual database credentials
DB_NAME=rotc_db
DB_USER=rotc_user
DB_PASSWORD=your-db-password
DB_HOST=your-db-host.render.com
DB_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL for caching, Celery broker, and Channels layer
# Auto-configured by Render from Redis service
REDIS_URL=redis://default:password@host:6379

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated list)
CORS_ALLOWED_ORIGINS=https://msu-snd-rgms-1.onrender.com,https://rotc-django-web.onrender.com

# =============================================================================
# CLOUDINARY CONFIGURATION (File Storage)
# =============================================================================

# Cloudinary credentials for media file storage
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# GUNICORN CONFIGURATION (Web Service)
# =============================================================================

# Number of Gunicorn worker processes
GUNICORN_WORKERS=4

# Gunicorn log level (debug, info, warning, error, critical)
GUNICORN_LOG_LEVEL=info

# =============================================================================
# DAPHNE CONFIGURATION (Channels Service)
# =============================================================================

# Daphne verbosity level (0, 1, 2, 3)
DAPHNE_VERBOSITY=1

# =============================================================================
# SENTRY CONFIGURATION (Error Tracking - Optional)
# =============================================================================

# Sentry DSN for error tracking and monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Environment name for Sentry
ENVIRONMENT=production

# Release version for Sentry
RELEASE_VERSION=1.0.0

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP server configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Default from email
DEFAULT_FROM_EMAIL=noreply@rotc.edu

# =============================================================================
# PUSH NOTIFICATIONS (Optional)
# =============================================================================

# Firebase Cloud Messaging (FCM) API key
FCM_API_KEY=your-fcm-api-key

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Force HTTPS redirect
SECURE_SSL_REDIRECT=True

# HSTS settings
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Cache timeout in seconds (default: 300 = 5 minutes)
CACHE_TIMEOUT=300

# Database connection max age in seconds (default: 600 = 10 minutes)
CONN_MAX_AGE=600

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================

# Celery broker URL (same as REDIS_URL)
CELERY_BROKER_URL=${REDIS_URL}

# Celery result backend (same as REDIS_URL)
CELERY_RESULT_BACKEND=${REDIS_URL}

# Celery task time limit in seconds (default: 1800 = 30 minutes)
CELERY_TASK_TIME_LIMIT=1800

# =============================================================================
# MIGRATION CONFIGURATION (For Data Migration Only)
# =============================================================================

# Node.js database URL for data migration
NODEJS_DATABASE_URL=postgresql://user:password@host:5432/nodejs_db

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with real credentials to version control
# 2. Use Render's environment variable management for production
# 3. Generate strong random values for SECRET_KEY
# 4. Ensure DATABASE_URL and REDIS_URL are configured from Render services
# 5. Configure Cloudinary credentials in Render dashboard
# 6. Set ALLOWED_HOSTS to include your Render service domains
# 7. Set CORS_ALLOWED_ORIGINS to include your frontend domain
