# Production Environment Variables for ROTC Django Backend
# Copy this file to .env in production and fill in the values

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.production
DEBUG=False
SECRET_KEY=your-secret-key-here-generate-with-django-secret-key-generator

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,rotc-django-web.onrender.com

# CORS Settings (comma-separated origins)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Database Configuration
# Option 1: Individual settings
DB_NAME=rotc_db
DB_USER=rotc_user
DB_PASSWORD=your-database-password
DB_HOST=your-database-host.render.com
DB_PORT=5432

# Option 2: DATABASE_URL (Render.com provides this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis Configuration
REDIS_URL=redis://your-redis-host.render.com:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://your-redis-host.render.com:6379/0
CELERY_RESULT_BACKEND=redis://your-redis-host.render.com:6379/0

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=ROTC System <noreply@your-domain.com>

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENVIRONMENT=production
RELEASE_VERSION=1.0.0

# Tesseract OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANGUAGES=eng,fil

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_LOG_LEVEL=info
PORT=8000

# Daphne Configuration (WebSocket)
DAPHNE_VERBOSITY=1

# Application Settings
CACHE_KEY_PREFIX=rotc_prod
CACHE_TTL_DEFAULT=300

# Rate Limiting
RATELIMIT_ENABLE=True

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=True
ENABLE_OCR=True
ENABLE_PDF_GENERATION=True

# Performance Settings
CONN_MAX_AGE=600
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Monitoring
ENABLE_PROMETHEUS_METRICS=True
